<?xml version="1.0"?>
<config>
    <tabs>
        <drip translate="label" module="drip_connect">
            <label>Drip</label>
            <sort_order>400</sort_order>
        </drip>
    </tabs>
    <sections>
        <dripconnect_general translate="label">
            <label>Drip Connect Configuration</label>
            <tab>drip</tab>
            <frontend_type>text</frontend_type>
            <sort_order>75</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <dripconnect_log_settings translate="label">
                    <label>Log Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enabled translate="label">
                            <label>Is Debug Mode Enabled</label>
                            <comment>log all requests and responses to a drip.log file</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enabled>
                        <log_rotation_period translate="label">
                            <label>Log Rotation Period (days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <is_enabled>1</is_enabled>
                            </depends>
                        </log_rotation_period>
                    </fields>
                </dripconnect_log_settings>
            </groups>
        </dripconnect_general>
    </sections>
</config>
